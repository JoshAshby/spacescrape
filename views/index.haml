%form{ method: :post }
  %input{ type: :text, name: :url, placeholder: "URL to scrape" }
  %button{ type: :submit } Queue!

%p
  Percent complete: #{ @complete }

%table
  %thead
    %tr
      %th
      %th ID
      %th Cached?
      %th Url
      %th Title
      %th Created At
      %th Updated At

  %tbody
    - @webpages.each do |webpage|
      %tr
        %td
          %form{ method: :post }
            %input{ type: :hidden, name: :url, value: webpage.url }
            %button{ type: :submit } Requeue!

        %td= webpage.id
        %td= webpage.cached?

        %td
          %a{ href: webpage.url }= webpage.url[0..60]

        %td= webpage.title[0..60] if webpage.title

        %td= webpage.created_at.utc.iso8601 6
        %td= webpage.updated_at.utc.iso8601 6 if webpage.updated_at
